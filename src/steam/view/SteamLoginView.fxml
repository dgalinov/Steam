<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="backgroundColor" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="steam.controller.SteamLoginController">
    <AnchorPane fx:id="background" prefHeight="400.0" prefWidth="600.0">
        <TextField fx:id="name" layoutX="200.0" layoutY="150.0" prefHeight="25.0" prefWidth="200.0" promptText="Name...">
            <font>
                <Font name="Century Gothic" size="12.0" />
            </font>
        </TextField>
        <Label layoutX="247.0" layoutY="85.0" styleClass="titleColor" text="LOGIN">
            <font>
                <Font name="Century Gothic" size="32.0" />
            </font>
        </Label>
        <Button id="registerButton" layoutX="200.0" layoutY="229.0" mnemonicParsing="false" onMouseClicked="#getInputs" prefHeight="23.0" prefWidth="200.0" styleClass="registerButton" text="Enter">
            <font>
                <Font name="Century Gothic" size="12.0" />
            </font>
        </Button>
        <PasswordField fx:id="password" layoutX="200.0" layoutY="188.0" prefHeight="25.0" prefWidth="200.0" promptText="Password...">
            <font>
                <Font name="Century Gothic" size="12.0" />
            </font>
        </PasswordField>
    </AnchorPane>
</AnchorPane>
